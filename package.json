{
  "name": "kindling-monorepo",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "description": "Local memory and continuity engine for AI-assisted development",
  "keywords": [
    "ai",
    "memory",
    "context",
    "llm",
    "agent",
    "continuity",
    "local-first",
    "sqlite",
    "fts",
    "opencode",
    "pocketflow"
  ],
  "author": "EddaCraft <hello@eddacraft.ai>",
  "homepage": "https://github.com/EddaCraft/kindling#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/EddaCraft/kindling.git"
  },
  "bugs": {
    "url": "https://github.com/EddaCraft/kindling/issues"
  },
  "license": "Apache-2.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "build": "pnpm -r run build",
    "test": "pnpm -r run test",
    "lint": "pnpm -r run lint",
    "type-check": "pnpm -r run type-check",
    "clean": "pnpm -r run clean && rm -rf node_modules",
    "prepublishOnly": "pnpm run build && pnpm run test",
    "publish:dry-run": "pnpm -r publish --dry-run --no-git-checks",
    "publish:release": "pnpm -r publish --no-git-checks",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/node": "^20.11.0",
    "eslint": "^9.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.0.0",
    "vitest": "^1.2.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "better-sqlite3",
      "esbuild"
    ]
