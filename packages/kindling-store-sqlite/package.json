{
  "name": "@kindling/store-sqlite",
  "version": "0.1.0",
  "description": "SQLite persistence layer for Kindling with FTS5 full-text search and WAL mode",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "migrations"
  ],
  "keywords": [
    "kindling",
    "sqlite",
    "fts5",
    "full-text-search",
    "persistence",
    "storage",
    "better-sqlite3",
    "local-first"
  ],
  "author": "EddaCraft <hello@eddacraft.ai>",
  "homepage": "https://github.com/EddaCraft/kindling/tree/main/packages/kindling-store-sqlite#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/EddaCraft/kindling.git",
    "directory": "packages/kindling-store-sqlite"
  },
  "bugs": {
    "url": "https://github.com/EddaCraft/kindling/issues"
  },
  "license": "Apache-2.0",
  "scripts": {
    "build": "tsc --build",
    "test": "vitest run",
    "test:watch": "vitest",
    "type-check": "tsc --noEmit",
    "lint": "eslint src",
    "clean": "rm -rf dist",
    "prepublishOnly": "pnpm run build"
  },
  "dependencies": {
    "@kindling/core": "workspace:*",
    "better-sqlite3": "^12.5.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/node": "^20.11.0",
    "typescript": "^5.3.0",
    "vitest": "^3.2.4"
  },
  "publishConfig": {
    "access": "public"
  }
}
