{
  "name": "@kindling/api-server",
  "version": "0.1.0",
  "description": "HTTP API server for Kindling - enables multi-agent concurrency",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./client": {
      "types": "./dist/client/index.d.ts",
      "import": "./dist/client/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "kindling",
    "api",
    "server",
    "http",
    "fastify",
    "ai",
    "memory",
    "multi-agent",
    "concurrency"
  ],
  "author": "EddaCraft <hello@eddacraft.ai>",
  "homepage": "https://github.com/EddaCraft/kindling/tree/main/packages/kindling-api-server#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/EddaCraft/kindling.git",
    "directory": "packages/kindling-api-server"
  },
  "bugs": {
    "url": "https://github.com/EddaCraft/kindling/issues"
  },
  "license": "Apache-2.0",
  "scripts": {
    "build": "tsc --build",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest",
    "type-check": "tsc --noEmit",
    "lint": "eslint src",
    "clean": "rm -rf dist",
    "prepublishOnly": "pnpm run build"
  },
  "dependencies": {
    "@kindling/core": "workspace:*",
    "@kindling/store-sqlite": "workspace:*",
    "@kindling/provider-local": "workspace:*",
    "fastify": "^4.25.0",
    "@fastify/cors": "^8.5.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
