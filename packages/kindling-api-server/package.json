{
  "name": "@kindling/api-server",
  "version": "0.1.0",
  "description": "HTTP API server for Kindling - enables multi-agent concurrency",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./client": {
      "types": "./dist/client/index.d.ts",
      "import": "./dist/client/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc --build",
    "test": "vitest run",
    "test:watch": "vitest",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@kindling/core": "workspace:*",
    "@kindling/store-sqlite": "workspace:*",
    "@kindling/provider-local": "workspace:*",
    "fastify": "^4.25.0",
    "@fastify/cors": "^8.5.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0"
  },
  "license": "Apache-2.0"
}
