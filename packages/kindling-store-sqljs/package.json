{
  "name": "@eddacraft/kindling-store-sqljs",
  "version": "0.1.0",
  "description": "sql.js (WASM) persistence layer for Kindling - browser and cross-platform compatible",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "!dist/test"
  ],
  "keywords": [
    "kindling",
    "sqlite",
    "sql.js",
    "wasm",
    "fts5",
    "full-text-search",
    "persistence",
    "storage",
    "browser",
    "local-first"
  ],
  "author": "EddaCraft <hello@eddacraft.ai>",
  "homepage": "https://github.com/EddaCraft/kindling/tree/main/packages/kindling-store-sqljs#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/EddaCraft/kindling.git",
    "directory": "packages/kindling-store-sqljs"
  },
  "bugs": {
    "url": "https://github.com/EddaCraft/kindling/issues"
  },
  "license": "Apache-2.0",
  "scripts": {
    "build": "tsc --build",
    "test": "vitest run",
    "test:watch": "vitest",
    "type-check": "tsc --noEmit",
    "lint": "eslint src",
    "clean": "rm -rf dist",
    "prepublishOnly": "pnpm run build"
  },
  "dependencies": {
    "@eddacraft/kindling-core": "workspace:*",
    "sql.js": "^1.11.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "typescript": "^5.3.0",
    "vitest": "^3.2.4"
  },
  "publishConfig": {
    "access": "public"
  }
}
