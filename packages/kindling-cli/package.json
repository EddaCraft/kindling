{
  "name": "@kindling/cli",
  "version": "0.1.0",
  "description": "CLI for Kindling inspection, debugging, and export/import",
  "keywords": [
    "cli",
    "command-line",
    "kindling",
    "inspection",
    "debugging",
    "export",
    "import"
  ],
  "homepage": "https://github.com/EddaCraft/kindling#readme",
  "bugs": {
    "url": "https://github.com/EddaCraft/kindling/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/EddaCraft/kindling.git",
    "directory": "packages/kindling-cli"
  },
  "license": "Apache-2.0",
  "author": "EddaCraft",
  "type": "module",
  "bin": {
    "kindling": "./dist/cli.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc --build",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "pnpm run build"
  },
  "dependencies": {
    "@kindling/core": "workspace:*",
    "@kindling/store-sqlite": "workspace:*",
    "commander": "^12.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
