{
  "name": "@kindling/cli",
  "version": "0.1.0",
  "description": "Command-line interface for Kindling - inspect, search, and manage your local AI memory",
  "type": "module",
  "bin": {
    "kindling": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "!dist/test"
  ],
  "keywords": [
    "kindling",
    "cli",
    "command-line",
    "ai",
    "memory",
    "inspection",
    "debugging",
    "search"
  ],
  "author": "EddaCraft <hello@eddacraft.ai>",
  "homepage": "https://github.com/EddaCraft/kindling/tree/main/packages/kindling-cli#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/EddaCraft/kindling.git",
    "directory": "packages/kindling-cli"
  },
  "bugs": {
    "url": "https://github.com/EddaCraft/kindling/issues"
  },
  "license": "Apache-2.0",
  "scripts": {
    "build": "tsc --build",
    "test": "vitest run",
    "test:watch": "vitest",
    "type-check": "tsc --noEmit",
    "lint": "eslint src",
    "clean": "rm -rf dist",
    "prepublishOnly": "pnpm run build"
  },
  "dependencies": {
    "@kindling/api-server": "workspace:*",
    "@kindling/core": "workspace:*",
    "@kindling/provider-local": "workspace:*",
    "@kindling/store-sqlite": "workspace:*",
    "better-sqlite3": "^12.5.0",
    "commander": "^12.0.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.0",
    "@types/node": "^20.11.0",
    "typescript": "^5.3.0",
    "vitest": "^3.2.4"
  },
  "publishConfig": {
    "access": "public"
  }
}
