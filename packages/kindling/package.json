{
  "name": "@eddacraft/kindling",
  "version": "0.1.0",
  "description": "Local memory and continuity engine for AI-assisted development",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "kindling": "./dist/cli/index.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./store": {
      "types": "./dist/store/index.d.ts",
      "import": "./dist/store/index.js"
    },
    "./provider": {
      "types": "./dist/provider/index.d.ts",
      "import": "./dist/provider/index.js"
    },
    "./server": {
      "types": "./dist/server/index.d.ts",
      "import": "./dist/server/index.js"
    },
    "./client": {
      "types": "./dist/server/client/index.d.ts",
      "import": "./dist/server/client/index.js"
    }
  },
  "files": [
    "dist",
    "migrations"
  ],
  "keywords": [
    "kindling",
    "ai",
    "memory",
    "context",
    "llm",
    "agent",
    "observations",
    "capsules",
    "retrieval",
    "sqlite",
    "fts5",
    "full-text-search",
    "cli",
    "local-first"
  ],
  "author": "EddaCraft <hello@eddacraft.ai>",
  "homepage": "https://github.com/EddaCraft/kindling#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/EddaCraft/kindling.git",
    "directory": "packages/kindling"
  },
  "bugs": {
    "url": "https://github.com/EddaCraft/kindling/issues"
  },
  "license": "Apache-2.0",
  "scripts": {
    "build": "tsc --build",
    "test": "vitest run",
    "test:watch": "vitest",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "pnpm run build"
  },
  "dependencies": {
    "better-sqlite3": "^12.5.0",
    "commander": "^12.0.0",
    "fastify": "^4.25.0",
    "@fastify/cors": "^8.5.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/node": "^20.11.0",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
