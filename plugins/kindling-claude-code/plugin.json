{
  "name": "kindling",
  "version": "0.1.0",
  "description": "Memory continuity for Claude Code - remember what you worked on across sessions",
  "author": "EddaCraft",
  "homepage": "https://github.com/EddaCraft/kindling",
  "license": "Apache-2.0",
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/session-start.js"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/post-tool-use.js"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/stop.js"
          }
        ]
      }
    ]
  }
}
